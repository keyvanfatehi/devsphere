<div id="rightcol">
  <div id="time"><%= current_time %></div>
  <div id="usernav">
    <% if current_user %>
      <%= image_tag current_user.gravatar %>
      <%= link_to "Logout", "users/sign_out", :method=>:delete %>
    <% else %>
      <%= form_for (user=User.new), :url=>user_session_path(user) do |f| %>
        <p><%= f.label :email %><br><%= f.text_field :email %></p>
        <p><%= f.label :password %><br><%= f.password_field :password %></p>
        <%= f.submit "Login" %><%= f.submit "Register", :id=>"register" %>
      <% end %>
    <% end %>
  </div>
  <ul id="links">
    <% TALK_LINKS.each do |k,v| %>
      <li><%= link_to(k,v) %></li>
    <% end %>
  </ul>
</div>
<div id="content">
  <div id="search">
    <%= text_field_tag :search %>
    <%= button_tag "Search" %>
  </div>
  <div id="filters">
    <%= button_tag "All Uploads" %>
    <%= select_tag :time_filter, options_for_select(["From Last Week"])%>
  </div>
  <div id="posts">
    <% @posts.each do |post| %>
      <%= render :partial => 'post', :locals=>{:post=>post} %>
    <% end %>
  </div>
</div>